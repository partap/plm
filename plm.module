    $summary_rows[] = array(
      'data' => array(
        array('data' => 'Points', 'header' => 1),
        array('data' => $tot_points, 'align' => 'right'),
      ));
    $summary_rows[] = array(
      'data' => array(
        array('data' => 'Winnings', 'header' => 1 ),
        array('data' => '$' . $tot_cash, 'align' => 'right'),
