// blank event result
function _plm_result_new($event, $place) {
  $res->eid = $event->eid;
  $res->place  = $place;
  $res->points = _plm_rules_default_points($event, $place);
  $res->cash   = _plm_rules_default_payout($event, $place);
  return $res;
}

