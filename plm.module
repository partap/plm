function theme_plm_upcoming_events($season){
  if (!user_access('access poker league member content')) return '';

  global $user;
  $events = _get_upcoming_plm_events($season->sid);
  if (!isset($events)) {
    //$output .= '<p> None scheduled<p>';
    return $output;
  }
  $today = time() + $user->timezone;
  $fmt = 'D, M j';
  $output .= '<div class="upcoming">';
  $output .= "<h2>Upcoming events:</h2>";
  foreach ($events as $e) {
    if (!($e->hid)) continue;
    $datestr = format_date($e->event_date, 'custom', $fmt);
    $days = ($e->event_date - $today) / 86400;
    if ($days == 0) $daystr = 'Tonight';
    else if ($days == 1) $daystr = 'Tomorrow';
    else if ($days < 7) $daystr = 'Next week';
    else {
      $weeks = ceil($days/7);
      $daystr = "In $weeks weeks";
    }
    
    $output .= "<hr/>\n";
    $output .= "<h3>$daystr:</h3> "
      . "<p><b>$e->title</b> will be hosted by $e->host on $datestr.</p>";
    if ($e->hid == 1) {
      $output .= '<iframe width="400" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=3308+La+Veta+Dr+NE,+Albuquerque,+NM+87110&amp;sll=35.119593,-106.584249&amp;sspn=0.014357,0.027337&amp;ie=UTF8&amp;ll=35.12391,-106.581931&amp;spn=0.012285,0.018239&amp;z=15&amp;output=embed"></iframe><br /><small><a href="http://maps.google.com/maps?f=q&amp;source=embed&amp;hl=en&amp;geocode=&amp;q=3308+La+Veta+Dr+NE,+Albuquerque,+NM+87110&amp;sll=35.119593,-106.584249&amp;sspn=0.014357,0.027337&amp;ie=UTF8&amp;ll=35.12391,-106.581931&amp;spn=0.012285,0.018239&amp;z=15" style="color:#0000FF;text-align:left">View Larger Map</a></small>';
    }
  }
  $output .= '</div>';
  return $output;
}
function theme_plm_date_range($season, $teaser) {
  //$output = '<p>"theme_plm_date_range"</p>';
  $label = 'Starts';
  $now = gmmktime();
  if ($season->start_date < $now) $label = 'Started';
  $fmt = 'D, M j, Y';
  $datestr = date($fmt, $season->start_date);
  $output .= t(
    '<div>@label: @datestr</div>', array(
      '@label' => $label, 
      '@datestr' => $datestr,
    )
  );
  if ($season->end_date == 0) return $output;
  
  $label = 'Ends';
  if ($season->end_date < $now) $label = 'Ended';
  $datestr = date($fmt, $season->end_date);
  $output .= t(
    '<div>@label: @datestr</div>',
    array(
      '@label' => $label, 
      '@datestr' => $datestr));
  return $output;// . "</div>";
}

